<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:weightSum="10"
android:background="@color/gris_2"
android:padding="16dp"
android:orientation="vertical"
tools:context="org.app.atenciondeordenes.VerFirma">

<TextView
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    android:text="Firma"
    android:gravity="center_horizontal|center_vertical"
    android:layout_marginBottom="4dp"
    android:textSize="19dp"/>
<LinearLayout
    android:id="@+id/llFimaMostrar"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="4"
    android:layout_margin="8dp"
    android:orientation="horizontal"></LinearLayout>
    <TextView
        android:id="@+id/etDocumentoFirmaMostrar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/gris_1"
        android:layout_margin="8dp"
        android:padding="8dp"
        android:inputType="text"/>

    <TextView
        android:id="@+id/etNombreFirmaMostrar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/gris_1"
        android:layout_margin="8dp"
        android:padding="8dp"
        android:inputType="text"/>
    <TextView
        android:id="@+id/etCorreoFirmaMostrar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/gris_1"
        android:layout_margin="8dp"
        android:padding="8dp"
        android:inputType="text"/>


<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="0dp"
    android:layout_weight="2"
    android:layout_gravity="right" >

    <Button
        android:id="@+id/btnRegresarMostrarFirma"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_margin="8dp"
        android:background="@drawable/cir_azul3"
        android:drawableRight="@drawable/regresar"
        android:padding="8dp"
        android:textColor="@color/gris_1" />
    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Regresar"
        android:layout_marginTop="18dp"
        android:layout_alignTop="@+id/btnRegresarMostrarFirma"
        android:layout_toRightOf="@+id/btnRegresarMostrarFirma"
        android:layout_toEndOf="@+id/btnRegresarMostrarFirma" />
 />

</RelativeLayout>
</LinearLayout>