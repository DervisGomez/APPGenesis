<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gris_2"
    tools:context="org.app.atenciondeordenes.fragment_i_detalle.Fragment_I">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="@color/verde_2"
        android:weightSum="3"
        android:orientation="horizontal">

        <Button
            android:layout_width="0dp"
            android:id="@+id/btnGenerarCobro"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textAllCaps="false"
            android:background="@color/verde_2"
            android:text="Guardar" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="72dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/generarCobroLinearLayout"
            android:layout_margin="8dp"
            android:background="@color/gris_1"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="3"
                android:background="@color/gris_4"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:textStyle="bold"
                    android:background="@color/gris_1"
                    android:padding="8dp"
                    android:text="Generar Cobro:"/>
                <RadioGroup
                    android:layout_width="0dp"
                    android:id="@+id/rgGenerarCobro"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:orientation="horizontal"
                    android:padding="8dp"
                    android:background="@color/gris_1">
                    <RadioButton
                        android:layout_width="0dp"
                        android:id="@+id/rbGcSi"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="SI"
                        />
                    <RadioButton
                        android:layout_width="0dp"
                        android:id="@+id/rbGcNo"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="NO"
                        />
                </RadioGroup>

            </LinearLayout>
        </LinearLayout>


    </LinearLayout>
    <FrameLayout
        android:id="@+id/cobroContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</FrameLayout>
