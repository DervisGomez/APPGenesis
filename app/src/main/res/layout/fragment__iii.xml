<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gris_2"
    tools:context="org.app.atenciondeordenes.fragment_iii_personas.Fragment_III">
    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:background="@color/verde_2"
    android:weightSum="3"
    android:orientation="horizontal">
        <Button
            android:id="@+id/btnNuevaPersona2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textAllCaps="false"
            android:background="@color/verde_2"
            android:text="Agregar"
            />

    <Button
        android:id="@+id/btnSuspenderDetalle"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:textAllCaps="false"
        android:background="@color/verde_2"
        android:text=""
        />
    <Button
        android:id="@+id/btnCerrarDetalle"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:textAllCaps="false"
        android:background="@color/verde_2"
        android:text=""
        />

</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="8dp"
        android:layout_marginTop="64dp">
        <ListView
            android:id="@+id/lvPersonaMostrar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="#00ffffff">

        </ListView>

    </LinearLayout>

        <RelativeLayout
            android:id="@+id/formularioPersona"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:background="@color/azul_4t"
            android:paddingTop="@dimen/activity_vertical_margin">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_centerVertical="true"
                android:background="@color/gris_4"
                android:padding="6dp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@color/azul_4"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:paddingBottom="16dp"
                    android:paddingTop="16dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Nueva Persona"
                        android:gravity="center_horizontal"
                        android:layout_marginBottom="16dp"
                        android:textSize="19dp"/>

                    <AutoCompleteTextView
                        android:id="@+id/etNombreApellido"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/gris_2"
                        android:layout_margin="8dp"
                        android:padding="8dp"
                        android:hint="Nombre"/>

                    <RelativeLayout
                        android:id="@+id/rlfondo"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:layout_gravity="right" >

                        <Button
                            android:id="@+id/btnRegresarPersona"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:layout_margin="8dp"
                            android:background="@drawable/cir_azul3"
                            android:drawableRight="@drawable/regresar"
                            android:padding="8dp"
                            android:textColor="@color/gris_1" />

                        <Button
                            android:id="@+id/btnGuardarPersona"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentTop="true"
                            android:layout_margin="8dp"
                            android:background="@drawable/cir_verde2"
                            android:drawableLeft="@drawable/guardar"
                            android:padding="11dp"
                            android:textColor="@color/gris_1" />

                        <TextView
                            android:id="@+id/textView13"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBaseline="@+id/btnRegresarPersona"
                            android:layout_alignBottom="@+id/btnRegresarPersona"
                            android:layout_toRightOf="@+id/btnRegresarPersona"
                            android:text="Regresar"
                            android:textColor="@color/gris_1" />

                        <TextView
                            android:id="@+id/textView2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBaseline="@+id/btnGuardarPersona"
                            android:layout_alignBottom="@+id/btnGuardarPersona"
                            android:layout_toLeftOf="@+id/btnGuardarPersona"
                            android:text="Guardar"
                            android:textColor="@color/gris_1" />

                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>



        </RelativeLayout>

</FrameLayout>
