<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/gris_2"
    android:id="@+id/databaseLayout"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@color/gris_1"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/gris_4"
            android:orientation="horizontal"
            android:weightSum="3">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/gris_1"
                android:gravity="left"
                android:padding="8dp"
                android:text="Numero:"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0dp"
                android:id="@+id/tvNumeroDatabase"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@color/gris_1"
                android:orientation="horizontal"
                android:padding="8dp">

            </TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/gris_4"
            android:orientation="horizontal"
            android:weightSum="3">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@color/gris_1"
                android:gravity="left"
                android:padding="8dp"
                android:text="Nombre de la Base de Datos:"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0dp"
                android:id="@+id/tvDatabaseName"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/gris_1"
                android:orientation="horizontal"
                android:padding="8dp">

            </TextView>
        </LinearLayout>


    </LinearLayout>
</LinearLayout>