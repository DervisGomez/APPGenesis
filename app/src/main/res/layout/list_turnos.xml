<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="11"
    android:padding="8dp">
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="11"
        android:padding="4dp"
        android:background="@color/gris_1"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:textStyle="bold"
                android:layout_margin="4dp"
                android:text="Turno:"/>
            <TextView
                android:id="@+id/tvIdTurno"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:layout_margin="4dp"
                android:textSize="15dp"
                android:textColor="@color/gris_4"
                android:text="Id: 12345 "/>"
            <TextView
                android:id="@+id/tvEstadoTurno"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="4dp"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="@color/gris_4"
                android:text="12345 "/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4">
            <TextView
                android:id="@+id/tvLabelSolicitud"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:textStyle="bold"
                android:layout_margin="4dp"
                android:text="Zona:"/>
            <TextView
                android:id="@+id/tvZonaTurno"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="4dp"
                android:textColor="@color/gris_4"
                android:textSize="15dp"
                android:text="Tipo Trabajo: 12345 "/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:textStyle="bold"
                android:layout_margin="4dp"
                android:text="Sector:"/>
            <TextView
                android:id="@+id/tvSectorTurno"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="4dp"
                android:textColor="@color/gris_4"
                android:textSize="15dp"
                android:text="Tipo Trabajo: 12345 "/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:textStyle="bold"
                android:layout_margin="4dp"
                android:text="Descripcion:"/>
            <TextView
                android:id="@+id/tvDescripcionTurno"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:layout_margin="4dp"
                android:textColor="@color/gris_4"
                android:textSize="15dp"
                android:text="12345 "/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
